# --- Azure AD / Microsoft Identity Platform ---
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_TENANT_ID=

# NextAuth (must be HTTPS in production)
NEXTAUTH_URL=https://your-domain.example
NEXTAUTH_SECRET=change-me-strong-secret

# MongoDB (External server recommended)
MONGODB_URI=mongodb+srv://user:pass@cluster0.mongodb.net/complaints?retryWrites=true&w=majority

# Domain and ACME email for automatic HTTPS
DOMAIN=your-domain.example
ACME_EMAIL=you@example.com

API_BASE_URL=http://localhost:4000

# Cron schedule and timezone
CRON_TIME=5 0 * * *
TIMEZONE=Asia/Dhaka

# Optional: mailbox to summarize (shared mailbox or user principal name)
MONITORED_MAILBOX=support@your-domain.example